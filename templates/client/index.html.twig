{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <main id="container">
        <aside class="menu">
            <h1>Clients</h1>
            <ul>
                <li><a href="{{ path('app_client_new') }}" class="btn">Create new</a></li>
            </ul>
        </aside>
        
        <section class="content">
            <form class="search" action="{{ path('search_client') }}" method="POST">
                <fieldset>
                    <legend>Search</legend>
                    <label>Name : <input type="text" name="name" /></label>
                    <label>Phone : <input type="text" name="phone" /></label>
                    <label>Email : <input type="text" name="email" /></label>
                    <label>Adress : <input type="text" name="address" /></label>
                    <button type="submit" class="btn">Search</button>
                </fieldset>
            </form>

            <div class="table-wrapper">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Notes</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.name }}</td>
                                <td>{{ client.email }}</td>
                                <td>{{ client.phone }}</td>
                                <td>{{ client.address }}</td>
                                <td>{{ client.notes }}</td>
                                <td>
                                    <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn-sm">show</a>
                                    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn-sm">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>
{% endblock %}