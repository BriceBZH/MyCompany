{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <main id="container">
        <aside class="menu">
            <h1>Invoices</h1>
            <ul>
                <li><a href="{{ path('app_invoice_new') }}}" class="btn">Create new</a></li>
            </ul>
        </aside>

        <section class="content">
            <form class="search">
                <fieldset>
                    <legend>Search</legend>
                    <label>Date created : <input type="text" name="name" /></label>
                    <label>Client : <input type="text" name="name" /></label>
                    <label>Status : <input type="text" name="phone" /></label>
                    <label>Total ht : <input type="text" name="email" /></label>
                    <label>Total ttc : <input type="text" name="email" /></label>
                    <label>Total tva : <input type="text" name="email" /></label>
                    <button type="submit" class="btn">Search</button>
                </fieldset>
            </form>

            <div class="table-wrapper">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Date created</th>
                            <th>Due date</th>
                            <th>Status</th>
                            <th>Total ht</th>
                            <th>Total ttc</th>
                            <th>Total tva</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for invoice in invoices %}
                            <tr>
                                <td>{{ invoice.id }}</td>
                                <td>{{ invoice.dateCreated ? invoice.dateCreated|date('Y-m-d') : '' }}</td>
                                <td>{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d') : '' }}</td>
                                <td>{{ invoice.status }}</td>
                                <td>{{ invoice.totalHt }}</td>
                                <td>{{ invoice.totalTtc }}</td>
                                <td>{{ invoice.totalTva }}</td>
                                <td>
                                    <a href="{{ path('app_invoice_show', {'id': invoice.id}) }}"  class="btn-sm">show</a>
                                    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}"  class="btn-sm">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>
{% endblock %}